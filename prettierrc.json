{
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 300,
    "endOfLine": "lf",
    "trailingComma": "es5",
    "overrides": [
        {
            "files": "*.scss",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "*.vue",
            "options": {
                "printWidth": 120
            }
        }
    ],
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": ["^vue", "^@?\\w", "^@/.*", "^[./]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
